# Microsoft Entra (Azure AD) Configuration
# Copy this file to .env and fill in your actual values

# Azure AD Application Registration
AZURE_CLIENT_ID=your-client-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_AUTHORITY=https://login.microsoftonline.com/${AZURE_TENANT_ID}

# Optional: Azure AD Client Secret (if using server-side authentication)
AZURE_CLIENT_SECRET=your-client-secret-here

# API Configuration
API_BASE_URL=https://localhost:7202
SIGNALR_HUB_URL=https://localhost:7202/hubs/laf

# Feature Flags
ENABLE_ENTRA_AUTH=true
ENABLE_JWT_FALLBACK=true